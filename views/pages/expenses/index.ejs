}

#mainNav ul li a {
  color: white;
  text-decoration: none;
  font-size: 20px;  
  white-space: nowrap;
}

#formHeading {
  color: white;
  font-weight: normal;
  font-size: 40px;
  margin-bottom: 25px;
}

.questions-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: opacity 1s, visibility 1s;
  width: 390px;
  margin-right: -195px;
  margin-top: -49px;
}

.questions-container label {
  color: white;
  font-size: 30px;
}

.questions-container input {
  background: none;
  border: none;
